<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MT4page</title>
    <link href="https://unpkg.com/tailwindcss@1.0.4/dist/tailwind.min.css" rel="stylesheet">
</head>
<%- include("../header.ejs") %>
    <style>
        /* Chrome, Safari, Edge, Opera */
        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        /* Firefox */
        input[type=number] {
            --moz-appearance: textfield;
        }
body {
        background-color: #bee3f8 !important;
    }
        /* 
        body {
            overflow-y: hidden;
            overflow-x: hidden;
        } */
    </style>
<% if (messages.success&& messages.success.includes("data alrady exists")) { %>
    <div id="success-message" onclick="hideSuccessMessage()"
        class="bg-blue-400 rounded text-white py-2 px-4 flex items-center justify-between">
        <%= messages.success %>
    </div>
    <% } %>
<% if (messages.success&& messages.success.includes('data inserted successfully')) { %>
    <div id="success-message" onclick="hideSuccessMessage()"
        class="bg-blue-400 rounded text-white py-2 px-4 flex items-center justify-between">
        <%= messages.success %>
    </div>
    <% } %>
    <body>
        <div class=" min-h-screen flex items-center ">
            <div class="w-full">
                <h2 class="text-center text-blue-400 font-bold text-3xl mb-5 mt-5">Field Details</h2>
                <div class="bg-white p-10 pt-8 rounded-lg shadow md:w-3/4 mx-auto lg:w-1/2">
                    <!-- <form action="/MT4PageData" id="mt4details" method="post"> -->
                    <form id="mt4details">
                        <input type="hidden" value="<%= MT4data %>" />
                        <div class="flex flex-wrap -mx-3 mb-3">
                            <div class="w-full px-3 mb-6 md:mb-0">
                                <label class="block mb-2 font-bold text-gray-600" for="grid-first-name">System
                                    Name&nbsp;<span class="text-red-600">*</span>
                                </label>
                                <input
                                    class="appearance-none block w-full bg-gray-200 text-gray-700  border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                                    id="grid-last-name" type="text" placeholder="System Name" name="system_name"
                                    value="<%= MT4data.system_name %>" />
                                <% if (messages.error&& messages.error.includes('System Name is required')) { %>
                                    <div id="success-message" onclick="hideSuccessMessage()"
                                        class="rounded text-red-600 pl-2 pt-1 pb-2">
                                        <%= messages.error %>
                                    </div>
                                    <% } %>
                            </div>
                        </div>
                        <div class="flex flex-wrap -mx-3">
                            <div class="w-full px-3">
                                <label class="block mb-2 font-bold text-gray-600" for="grid-password">
                                    Profiles Folder Path&nbsp;<span class="text-red-600">*</span>
                                </label>
                                <input
                                    class="appearance-none block w-full bg-gray-200 text-gray-700  border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                                    id="grid-password" type="text" placeholder=" Profiles Folder Path"
                                    name="profile_folder_path" value="<%= MT4data.profile_folder_path %>" />
                                <% if (messages.error&& messages.error.includes('Profile Folder Path is required')) { %>
                                    <div id="success-message" onclick="hideSuccessMessage()"
                                        class="rounded text-red-600 pl-2 pt-1 pb-2">
                                        <%= messages.error %>
                                    </div>
                                    <% } %>
                                        <% if (messages.error&& messages.error.includes('Profile Folder Path is wrong'))
                                            { %>
                                            <div id="success-message" onclick="hideSuccessMessage()"
                                                class="rounded text-red-600 pl-2 pt-1 pb-2">
                                                <%= messages.error %>
                                            </div>
                                            <% } %>
                            </div>
                        </div>
                        <div class="flex flex-wrap -mx-3">
                            <div class="w-full px-3">
                                <label class="block mb-2 font-bold text-gray-600" for="grid-password">
                                    Profiles BackUp Folder Path&nbsp;<span class="text-red-600">*</span>
                                </label>
                                <input
                                    class="appearance-none block w-full bg-gray-200 text-gray-700  border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                                    id="grid-password" type="text" placeholder="Profiles BackUp Folder Path"
                                    name="profile_backupfolder_path" value="<%= MT4data.profile_backupfolder_path %>" />
                                <% if (messages.error&& messages.error.includes('Profile BackUp Folder Path is required')) { %>
                                    <div id="success-message" onclick="hideSuccessMessage()"
                                        class="rounded text-red-600 pl-2 pt-1 pb-2">
                                        <%= messages.error %>
                                    </div>
                                    <% } %>
                                        <% if (messages.error&& messages.error.includes('Profile BackUp Folder Path is wrong')) { %>
                                            <div id="success-message" onclick="hideSuccessMessage()"
                                                class="rounded text-red-600 pl-2 pt-1 pb-2">
                                                <%= messages.error %>
                                            </div>
                                            <% } %>
                            </div>
                        </div>
                        <div class="flex flex-wrap -mx-3">
                            <div class="w-full px-3">
                                <label class="block mb-2 font-bold text-gray-600" for="grid-password">
                                    Global Variable File Path&nbsp;<span class="text-red-600">*</span>
                                </label>
                                <input
                                    class="appearance-none block w-full bg-gray-200 text-gray-700  border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                                    id="grid-password" type="text" placeholder="Global Variable Folder Path"
                                    name="globalvar_folder_path" value="<%= MT4data.globalvar_folder_path %>" />
                                <% if (messages.error&& messages.error.includes('Global Variable Folder Path is required')) { %>
                                    <div id="success-message" onclick="hideSuccessMessage()"
                                        class="rounded text-red-600 pl-2 pt-1 pb-2">
                                        <%= messages.error %>
                                    </div>
                                    <% } %>
                                        <% if (messages.error&& messages.error.includes('Global Variable Folder Path is wrong')) { %>
                                            <div id="success-message" onclick="hideSuccessMessage()"
                                                class="rounded text-red-600 pl-2 pt-1 pb-2">
                                                <%= messages.error %>
                                            </div>
                                            <% } %>
                            </div>
                        </div>
                        <div class="flex flex-wrap -mx-3">
                            <div class="w-full px-3">
                                <label class="block mb-2 font-bold text-gray-600" for="grid-password">
                                    Global Variable BackUp Path&nbsp;<span class="text-red-600">*</span>
                                </label>
                                <input
                                    class="appearance-none block w-full bg-gray-200 text-gray-700  border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                                    id="grid-password" type="text" placeholder="Global Variable BackUp Folder Path"
                                    name="globalvar_backupfolder_path"
                                    value="<%= MT4data.globalvar_backupfolder_path %>" />
                                <% if (messages.error&& messages.error.includes('Global Variable BackUp Folder Path is required')) { %>
                                    <div id="success-message" onclick="hideSuccessMessage()"
                                        class="rounded text-red-600 pl-2 pt-1 pb-2">
                                        <%= messages.error %>
                                    </div>
                                    <% } %>
                                        <% if (messages.error&& messages.error.includes('Global Variable BackUp Folder Path is wrong')) { %>
                                            <div id="success-message" onclick="hideSuccessMessage()"
                                                class="rounded text-red-600 pl-2 pt-1 pb-2">
                                                <%= messages.error %>
                                            </div>
                                            <% } %>
                            </div>
                        </div>

                        <div class="mt-3 w-full flex justify-between">
                            <button formaction="/MT4PageData" formmethod="post"
                                class="w-full mt-5 bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-6 border border-blue-500 rounded">
                                Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>

</html>
<script src="/assets/jquery.IpInput.js"></script>
<script>
    function hideSuccessMessage() {
        var successMessage = document.getElementById("success-message");
        successMessage.style.display = "none";
    }
    setTimeout(hideSuccessMessage, 3000);
</script>