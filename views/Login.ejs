<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Login Page</title>
    <script src="https://cdn.tailwindcss.com"></script>
    
</head>

<style>
    * {
        font-family: Roboto, "Helvetica Neue", Arial, sans-serif !important;
        margin: 0;
        padding: 0;
        box-sizing: 0;
    }
body {
        background-color: #bee3f8 !important;
    }

   
</style>

<body>
<!-- partial:index.partial.html -->
    <section class=" min-h-screen flex items-center  justify-center select-none">
        <!-- login container -->
        <div class="bg-white flex rounded-lg drop-shadow-lg w-[45%] m-0 pt-8 pb-8 items-center">
            <!-- form -->
            <div class="px-4 md:px-16 w-full ">
                <h2 class="font-bold text-2xl pb-2 text-[#002D74]">Login</h2>
                <p class="text-xs mt-4 text-[#002D74]">If you are already a member, easily log in</p>
                <form action="/LoginData" class="flex flex-col gap-4" method="post">
                    <div>
                        <label for="email" class="mt-4 m-1 font-bold text-gray-600 block">Email&nbsp;<span class="text-red-600">*</span></label>
                        <input class="p-2 w-full rounded-xl border" type="text" name="email"
                            placeholder="Email" value="<%= logindata.email %>">
                        <% if (messages.error) { %>
                            <% if (messages.error.includes('Email is required') || messages.error.includes('Please enter a valid email address')
                                || messages.error.includes('This email is already in use. Please enter a different email.')) { %>
                                <div id="email-error-message" onclick="hideErrorMessage()" class="mt-1 text-red-600 pl-2">
                                    <%= messages.error %>
                                </div>
                                <% } %><% if (messages.error.includes('Invalid email')) { %>
                                    <div id="email-error-message" onclick="hideErrorMessage()" class="mt-1 text-red-600 pl-2">
                                        <%= messages.error %>
                                    </div>
                                    <% } %>
                                    <% } %>
                    </div>
                    <div class="relative">
                        <label for="password" class="mt-1 m-1 font-bold text-gray-600 block">Password&nbsp;<span class="text-red-600">*</span></label>
                        <div class="cursor-pointer">
                            <input class="p-2 rounded-xl mb-2 border w-full relative" type="password" name="password"
                                id="myInput" placeholder="Password" value="<%= logindata.password %>">
                                <div id="eye-icon" class="mx-2 absolute top-10 right-2" onclick="myFunction()"> <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
  <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
  <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
</svg>

                            </div>
                            
                        </div>
                         <% if (messages.error) { %>
        <% if (messages.error.includes('Password is required') || messages.error.includes('Password must be at least 3 characters long') || messages.error.includes('Password can be maximum 15 characters long')) { %>
            <div id="password-error-message" onclick="hideErrorMessage()" class="mt-1 text-red-600 pl-2">
                <%= messages.error %>
            </div>
        <% } %><% if (messages.error.includes('Invalid password')) { %>
            <div id="email-error-message" onclick="hideErrorMessage()" class="mt-1 text-red-600 pl-2">
                <%= messages.error %>
            </div>
            <% } %>
    <% } %>
                    </div>
                    <button type="submit"
                        class="block mt-4 w-full  bg-transparent text-[#2b6cb0] font-semibold hover:bg-[#4299e1] hover:text-white py-2 px-4 border border-[#4299e1] rounded-lg">
                        Login</button>

                </form>
            </div>
        </div>
    </section>
</body>

</html>
<script>
    function hideSuccessMessage() {
        var successMessage = document.getElementById("success-message");
        successMessage.style.display = 'none';
    }
    setTimeout(hideSuccessMessage, 3000);
    //password hide and show function
    function myFunction() {
        var x = document.getElementById("myInput");
        var eyeIcon = document.getElementById("eye-icon");
        if (x.type === "password") {
            x.type = "text";
            eyeIcon.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
  <path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 001.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.45 10.45 0 0112 4.5c4.756 0 8.773 3.162 10.065 7.498a10.523 10.523 0 01-4.293 5.774M6.228 6.228L3 3m3.228 3.228l3.65 3.65m7.894 7.894L21 21m-3.228-3.228l-3.65-3.65m0 0a3 3 0 10-4.243-4.243m4.242 4.242L9.88 9.88" />
</svg>
`
        } else {
            x.type = "password";
            eyeIcon.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
  <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
  <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
</svg>`
        } 
    }
</script>