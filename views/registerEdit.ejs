<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Update</title>
    <link href="https://unpkg.com/tailwindcss@1.0.4/dist/tailwind.min.css" rel="stylesheet" />
</head>
<style>
    * {
        font-family: Roboto, "Helvetica Neue", Arial, sans-serif !important;
    }

    p,
    label {
        font: 1rem 'Fira Sans', sans-serif;
    }
body {
        background-color: #bee3f8 !important;
    }
    input {
        margin: 0.4rem;
    }
</style>
<%- include("header.ejs") %>

    <body>
        <div class=" min-h-screen flex items-center select-none">
            <div class="w-full">
                <h2 class="text-center text-blue-400 font-bold text-3xl mb-5 mt-5">User Update</h2>
                <div class="bg-white p-10 pt-8 rounded-lg shadow md:w-3/4 mx-auto lg:w-1/2">
                    <form action="/RegisterEdit" id="Register" method="post">
                        <input type="hidden" name="editid" value="<%= Edit.id %>" />
                        <div class="flex flex-wrap -mx-3 mb-3">
                            <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                                <label class="block mb-2 font-bold text-gray-600" for="grid-first-name">
                                    First Name&nbsp;<span class="text-red-600">*</span>
                                </label>
                                <input
                                    class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                                    id="grid-last-name" type="text" placeholder="First Name" name="fname"
                                    value="<%= Edit.fname %>">
                                <% if (messages.error&& messages.error.includes('First name is required')) { %>
                                    <div id="success-message" onclick="hideSuccessMessage()"
                                        class="rounded text-red-600 pl-2 ">
                                        <%= messages.error %>
                                    </div>
                                    <% } %>
                            </div>
                            <div class="w-full md:w-1/2 px-3">
                                <label class="block mb-2 font-bold text-gray-600" for="grid-last-name">
                                    Last Name&nbsp;<span class="text-red-600">*</span>
                                </label>

                                <input
                                    class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                                    id="grid-last-name" type="text" placeholder="Last Name" name="lname"
                                    value="<%= Edit.lname %>">
                                <% if (messages.error&& messages.error.includes('Last name is required')) { %>
                                    <div id="success-message" onclick="hideSuccessMessage()"
                                        class="rounded text-red-600 pl-2 ">
                                        <%= messages.error %>
                                    </div>
                                    <% } %>
                            </div>
                        </div>
                        <div class="flex flex-wrap -mx-3">
                            <div class="w-full px-3">
                                <label class="block mb-2 font-bold text-gray-600" for="grid-password">
                                    Email&nbsp;<span class="text-red-600">*</span>
                                </label>
                                <input
                                    class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                                    id="grid-password" type="text" placeholder="Email" name="email"
                                    value="<%= Edit.email %>">
                                <% if (messages.error&& messages.error.includes("Please enter a valid email")) { %>
                                    <div id="success-message" onclick="hideSuccessMessage()"
                                        class="rounded text-red-600 pl-2 ">
                                        <%= messages.error %>
                                    </div>
                                    <% } %>
                                        <% if (messages.error&& messages.error.includes('Email already exists')) { %>
                                            <div id="success-message" onclick="hideSuccessMessage()"
                                                class="rounded text-red-600 pl-2 ">
                                                <%= messages.error %>
                                            </div>
                                            <% } %>
                                                <% if (messages.error&& messages.error.includes('Email is required')) {
                                                    %>
                                                    <div id="success-message" onclick="hideSuccessMessage()"
                                                        class="rounded text-red-600 pl-2 ">
                                                        <%= messages.error %>
                                                    </div>
                                                    <% } %>

                            </div>
                        </div>

                        <div class="flex flex-wrap -mx-3">
                            <div class="w-full px-3">
                                <label class="block mb-2 font-bold text-gray-600" for="grid-password">
                                    Password&nbsp;<span class="text-red-600">*</span>
                                </label>
                                <div class="relative cursor-pointer">
                                    <input
                                        class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                                        id="myInput" type="password" placeholder="Password" name="password"
                                        value="<%= registereditdata.password %>" />
                                    <div id="eye-icon" class="mx-2 absolute mt-3 top-0 right-0" onclick="myFunction()">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                            stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                        </svg>
                                    </div>
                                </div>
                                <% if (messages.error&& messages.error.includes('Password is required')) { %>
                                    <div id="success-message" onclick="hideSuccessMessage()"
                                        class="rounded text-red-600 pl-2 ">
                                        <%= messages.error %>
                                    </div>
                                    <% } %>
                            </div>
                            <div class="w-full px-3">
                                <label class="block mb-2 font-bold text-gray-600" for="grid-password">
                                    Confirm Password&nbsp;<span class="text-red-600">*</span>
                                </label>
                                <div class="relative cursor-pointer">
                                    <input
                                        class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                                        id="myInput1" type="password" placeholder="Confirm Password" name="cpassword"
                                        value="<%= registereditdata.cpassword %>" />
                                    <div id="eye-icon1" class="mx-2 absolute mt-3 top-0 right-0"
                                        onclick="myFunction1()"> <svg xmlns="http://www.w3.org/2000/svg" fill="none"
                                            viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                                            class="w-6 h-6">
                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                        </svg>
                                    </div>
                                </div>
                                <% if (messages.error && messages.error.includes('Passwords do not match')) { %>
                                    <div id="success-message" onclick="hideSuccessMessage()"
                                        class="rounded text-red-600 pl-2 ">
                                        <%= messages.error %>
                                    </div>
                                    <% } %>
                                        <% if (messages.error&& messages.error.includes('Confirm password is required'))
                                            { %>
                                            <div id="success-message" onclick="hideSuccessMessage()"
                                                class="rounded text-red-600 pl-2 ">
                                                <%= messages.error %>
                                            </div>
                                            <% } %>
                            </div>
                        </div>
                        <div class="flex flex-wrap -mx-3">
                            <div class="inline-block p-5 pt-3 pb-2">
                                <label class="block mb-2 font-bold text-gray-600" for="grid-password">
                                    Select Role&nbsp;<span class="text-red-600">*</span>
                                </label>
                                <div class="inline">
                                    <input type="radio" id="Admin" name="field" value="Admin" <% if(Edit.field==="Admin"
                                        ) { %>
                                    checked <% } %>>
                                        <label for="Admin">Admin</label>
                                </div>
                                <div class="inline">
                                    <input type="radio" id="User" name="field" value="User" <% if(Edit.field==="User" ){
                                        %>
                                    checked
                                    <% } %>>
                                        <label for="User">User</label>
                                </div>
                                <% if (messages.error&& messages.error.includes('pls select any one role')) { %>
                                    <div id="success-message" onclick="hideSuccessMessage()"
                                        class="rounded text-red-600 pl-2 ">
                                        <%= messages.error %>
                                    </div>
                                    <% } %>
                            </div>
                            <button type="submit"
                                class="block mt-3 w-full bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-6 mx-3 border border-blue-500 rounded">
                                Save
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
        </div>
        </div>
    </body>

</html>
<script>
    function hideSuccessMessage() {
        var successMessage = document.getElementById("success-message");
        successMessage.style.display = "none";
    }
    setTimeout(hideSuccessMessage, 4000);
    function myFunction() {
        var passwordInput = document.getElementById("myInput");
        var confirmInput = document.getElementById("confirmInput");

        if (passwordInput.type === "password" || confirmInput.type === "password") {
            passwordInput.type = "text";
            confirmInput.type = "text";
        } else {
            passwordInput.type = "password";
            confirmInput.type = "password";
        }
    }
